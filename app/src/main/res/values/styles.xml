<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="subtitle">
        <item name="android:textSize">@dimen/size_subtitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="link">
        <item name="android:textSize">@dimen/size_link</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingStart">@dimen/minimun_padding</item>
        <item name="android:paddingEnd">@dimen/minimun_padding</item>
    </style>

    <style name="main_title">
        <item name="android:textSize">@dimen/size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_height">@dimen/default_height_button</item>
        <item name="android:layout_width">@dimen/default_width_button</item>
        <item name="android:radius">@dimen/radius_10dp_button</item>
        <item name="android:layout_marginStart">@dimen/dimen_16dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

</resources>
